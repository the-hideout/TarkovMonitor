<MudImage Src="@levelIconPath()" Width="@Width"/>

@code {
    [Parameter]
    public int Level { get; set; } = 1;

    [Parameter]
    public int Width { get; set; } = 64;

    private string levelIconPath()
    {
        decimal group = Math.Floor((decimal)Level / 5) + 1;
        return $"/img/levelgroups/{group.ToString()}.png";
    }
}
